
<div class="event-tabs d-flex justify-content-center mx-auto">
    <button class="tab btn" data-category="all">All Events</button>
    <button class="tab btn" data-category="professional-development">Professional Development</button>
    <button class="tab btn" data-category="networking">Networking</button>
    <button class="tab btn" data-category="campus-events">Campus Events</button>
</div>
<h1>Events</h1>
<div class="height-100">
     <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4 events-container">
        {{#each events}}
        <div class="col-lg-3 col-md-4 col-sm-6 mb-4" data-category="{{category}}">
                <div class="card h-100">
                <div class="card-img-top"
                    style="height: 300px; background-image: url('/uploads/{{eventImage}}'); background-size: cover;">
                </div>
                <div class="card-body d-flex flex-column">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="card-title">{{title}}</h5>
                        <div class="card-icon">
                            {{{editIcon user ../user _id isAdmin}}}
                        </div>
                    </div>
                    <p class="card-text flex-grow-1">{{stripTags details}}</p>
                </div>
                <div class="card-footer text-center">
                    <small class="text-muted">Location: {{location}}</small><br>
                    <small class="text-muted">Date: {{eventDate}}</small><br>
                    <a href="/events/{{_id}}" class="btn btn-primary mt-auto">View Event</a>
                </div>
            </div>
            </div>
        {{else}}
            <p>No events to display</p>
        {{/each}}
    </div>
</div>








